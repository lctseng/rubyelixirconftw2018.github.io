section#venue
  h3.section-title Venue

  .venue
    .venue-img
      = image_tag 'venue.jpg', alt: data.site.venue.eventLocation_en, title: data.site.venue.eventLocation_en
    .venue-info
      .event-location
        .en.body-title
          = data.site.venue.eventLocation_en
        .cht.body-title.smaller
          span.slash
            | /
          = data.site.venue.eventLocation_cht
      .event-address
        .en.body-content
          = data.site.venue.eventAddress_en
        .cht.body-content.smaller
          span.slash
            | /
          = data.site.venue.eventAddress_cht

      = link_to data.site.venue.eventGoogleMap, target: '_blank', class:"btn btn-small google-map" do
        span Google Map +